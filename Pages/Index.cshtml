            <div class="col-lg-12 col-12">
                <h2 class="text-white mb-4 pb-lg-2">Contact</h2>
            </div>

            <div class="col-lg-6 col-12">
                <form method="post" class="custom-form contact-form">

                    <div class="row">

                        <div class="col-lg-6 col-12">
                            <label for="name" class="form-label">Name <sup class="text-danger">*</sup></label>

                            <input type="text" id="Name" name="Contact.Name" class="form-control" placeholder="Your Name" required="">
                        </div>

                        <div class="col-lg-6 col-12">
                            <label for="email" class="form-label">Email Address</label>

                            <input type="email" id="Email" name="Contact.Email" class="form-control" placeholder="yourmail@domain.com" required="">
                        </div>

                        <div class="col-12">
                            <label for="message" class="form-label">How can we help?</label>

                            <textarea id="Message" name="Contact.Message" rows="4" class="form-control"  placeholder="Message" required=""></textarea>

                        </div>
                    </div>

                    <div class="col-lg-5 col-12 mx-auto mt-3">
                        <button type="submit" class="form-control">Send Message</button>
                    </div>
                </form><br />   
                @if (Model.EmailSent)
                {
                      <div class="alert alert-success">Your email has been sent successfully Thank You For Contacting Us.</div>
                }
                else if (Model.EmailFailed)
                {
                      <div class="alert alert-danger">Sorry There was an error sending your email. Please try again later.</div>
                }
            
            </div>

